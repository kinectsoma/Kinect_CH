<Window x:Class="KD01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KD01"
        Title="KD01" Height="510" Width="1280">
    <Canvas x:Name="rootCanvas">
        <!--  Grid를 Canvas로 수정   -->
        <Image Canvas.Left="0" Canvas.Top="0" 
               Height="480"  Width="640" 
               Name="image1" Stretch="Fill"/>
        <Image Canvas.Left="640" Canvas.Top="0" 
               Height="480"  Width="640" 
               Name="image2" Stretch="Fill"/>
        <Ellipse Canvas.Left="0" Canvas.Top="0" 
                 Height="23" Width="23"
                 Name="headEllipse"  
                 Fill="White" />
        <Ellipse Canvas.Left="0" Canvas.Top="0" 
                 Height="10" Width="10"
                 Name="noseEllipse"  
                 Fill="White" />
        <!-- <TextBlock Canvas.Left="101" Canvas.Top="15" 
                   Height="Auto" Width="Auto" 
                   Name="textBlock1" Text="TextBlock" 
                   FontSize="30" Foreground="Red" /> a-->
        <TextBlock Canvas.Left="10" Canvas.Top="10" 
        	Height="Auto" Width="Auto" 
        	x:Name="textBlock2" Text="TextBlock" 
        	FontSize="30" Foreground="White" />
    </Canvas>
</Window>
